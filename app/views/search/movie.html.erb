<h1><%= @movie["Title"] %></h1>

<% if @movie["Plot"] != "N/A" %>
	<p class="padding"><%= @movie["Plot"] %></p>
<% else %>
	<p class="center plot-padding">(No description)</p>
<% end %>

<% if @movie["Poster"] != "N/A" %>
	<img src='<%= @movie["Poster"]%>' id="movie-img" class="center"></img>
<% else %>
	<p class="center">(No image)</p>
<% end %>
